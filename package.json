{
  "name": "depsman",
  "repository": "github:fabiospampinato/depsman",
  "description": "Extract and report metadata about dependencies of the current package.",
  "version": "1.1.0",
  "type": "module",
  "bin": "dist/bin.js",
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "tsex clean",
    "compile": "tsex compile",
    "compile:watch": "tsex compile --watch",
    "prepublishOnly": "tsex prepare"
  },
  "keywords": [
    "metadata",
    "dependencies",
    "licenses",
    "reports"
  ],
  "dependencies": {
    "is": "npm:@fabiospampinato/is@^2.5.0",
    "sanitize-basename": "^2.0.0",
    "specialist": "^1.1.0",
    "string-escape-regex": "^1.0.0",
    "tiny-readdir": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "tsex": "^2.2.0",
    "typescript": "^4.9.5"
  }
}
